    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Prod Debugger",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "env": {
                "NODE_ENV": "production"
            }
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Dev Debugger",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}